{
  "name": "bitmovin-player-analytics-conviva",
  "version": "2.0.0",
  "description": "Conviva analytics integration for the Bitmovin Player",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitmovin/bitmovin-player-analytics-conviva.git"
  },
  "main": "bitmovinplayer-analytics-conviva.js",
  "module": "lib/index.js",
  "es2015": "lib-esm/index.js",
  "scripts": {
    "lint": "node_modules/.bin/tslint -c tslint.json 'src/**/*.ts'",
    "start": "./node_modules/.bin/webpack-dev-server --open --config webpack.dev.js",
    "clean": "rm -rf ./dist",
    "copy": "cp ./package.json ./dist/package.json",
    "build": "npm run build:describe && npm run lint && npm run clean && npm run build:lib && npm run build:esm && npm run build:bundle && npm run copy",
    "build:describe": "echo \"Building Player Integration...\"",
    "build:lib": "./node_modules/.bin/tsc --module commonjs --outDir ./dist/lib --declaration",
    "build:esm": "./node_modules/.bin/tsc --module es6 --outDir ./dist/lib-esm --declaration",
    "build:bundle": "./node_modules/.bin/webpack --config webpack.prod.js"
  },
  "author": "Bitmovin",
  "license": "ISC",
  "devDependencies": {
    "bitmovin-player": "^8.0.3",
    "ts-loader": "^5.3.1",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-copy-plugin": "0.0.4",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.5"
  }
}
